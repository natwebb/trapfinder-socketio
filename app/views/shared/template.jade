doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Trapfinder: Alone in the Dark
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    block less
    script(src='/js/vendor/modernizr.js')
  body
    nav.top-bar
      ul.title-area
        li.name
          h1: a(href="/") Trapfinder: Alone in the Dark
        li.toggle-topbar.menu-icon
          a(href="#") Menu

      section.top-bar-section
        ul.left
        ul.right
          li: a(href='/about') About
          li.divider
          li: a(href='/users') Leaderboard
          li.divider
          if user
            li: a(href='/game') Play
            li.divider
            li: a(href='/users/'+user._id.toString())= user.name
            li.divider
            li: a(href="/logout") Log Out
          if !user
            li: a(href="#")#showRegister Register
            li.divider
            li: a(href="#")#showLogin Login
    .row
      .small-12.columns
        block content

    block game

    #registerBox.centered
      .row
        .small-12.columns
          form(action='/register', method='post')
            fieldset
              legend Register
              label(for='name') Username
                input(type='text', name='name', autofocus)
              label(for='email') Email Address
                input(type='email', name='email')
              label(for='password') Password
                input(type='password', name='password')
              button Register

    #loginBox.centered
      .row
        .small-12.columns
          form(action='/login', method='post')
            fieldset
              legend Log In
              label(for='email') Email Address
                input(type='email', name='email', autofocus)
              label(for='password') Password
                input(type='password', name='password')
              button Log In

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.min.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')
    block scripts
